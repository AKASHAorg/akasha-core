{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "paths": {
      "@akashaorg/package-utils-plugin": ["./tools/package-utils-plugin/src/index.ts"],
      "@akashaorg/core-sdk": ["./dist/npm/core-sdk/lib"],
      "@akashaorg/core-sdk/lib/*": [
        "./dist/npm/core-sdk/lib/*"
      ],
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "tmp", "dist"]
}
