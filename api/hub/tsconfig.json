{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": ["dom", "es2019"],
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "sourceMap": true,
    "pretty": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src"]
}
