{
  "name": "@akashaproject/ui-app-loader",
  "version": "0.1.0",
  "description": "App loader for AKASHA web",
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "contributors": [
    "Marius Darila <marius.darila@akasha.world> (https://github.com/kenshyx)",
    "Sever Abibula <sever.abibula@akasha.world> (https://github.com/SeverS)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AkashaProject/akasha-sdk-js.git"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "tsc --build && yarn run pack",
    "test": "BABEL_ENV=test jest",
    "tsc": "tsc",
    "pack": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js",
    "postpack": "copyfiles -f ./dist/* ../build/app-loader",
    "prepare": "yarn run tsc",
    "watch": "webpack --config webpack.config.js --watch",
    "clean": "tsc --build --clean && rimraf lib dist node_modules tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@akashaproject/awf-sdk": "*",
    "@akashaproject/sdk-typings": "*",
    "@akashaproject/ui-awf-typings": "*",
    "@akashaproject/af-testing": "*",
    "qs": "6.10.2",
    "single-spa": "5.9.3"
  },
  "devDependencies": {
    "i18next": "20.6.1",
    "@types/pino": "7.0.5",
    "@types/qs": "6.9.7",
    "@types/systemjs": "6.1.1",
    "systemjs": "6.12.1"
  },
  "peerDependencies": {
    "rxjs": "7.3.0"
  },
  "files": [
    "lib",
    "dist"
  ]
}
