{
  "name": "@akashaproject/app-translation",
  "version": "0.0.1",
  "description": "Lib to serve config for translations",
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "contributors": [
    "Sever Abibula <sever.abibula@akasha.world> (https://github.com/SeverS)",
    "Marius Darila <marius.darila@akasha.world> (https://github.com/kenshyx)",
    "Valentin Cotea <valentin.cotea@akasha.world> (https://github.com/quininez)",
    "Damir Sabolic <damir.sabolic@akasha.world> (https://github.com/PrimarchAlpharius)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AKASHAorg/akasha-world-framework.git"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "tsc --build",
    "tsc": "tsc --build",
    "prepare": "npm run tsc",
    "pack": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js",
    "postpack": "copyfiles -f ./dist/* ../../build/apps/translation",
    "start": "webpack-dev-server --config ./webpack.config.dev.js --port 8333",
    "watch": "webpack --config webpack.config.js --watch",
    "clean": "tsc --build --clean && rimraf lib dist node_modules tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@akashaproject/awf-sdk": "*",
    "@akashaproject/sdk-typings": "*",
    "i18next": "20.6.1",
    "i18next-browser-languagedetector": "6.1.2",
    "i18next-fetch-backend": "3.0.0",
    "i18next-chained-backend": "3.0.2",
    "i18next-localstorage-backend": "3.1.3",
    "react-i18next": "11.12.0"
  },
  "devDependencies": {
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@types/react-test-renderer": "17.0.1"
  },
  "files": [
    "lib"
  ]
}
