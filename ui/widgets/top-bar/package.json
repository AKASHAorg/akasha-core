{
  "name": "@akashaproject/ui-widget-topbar",
  "version": "0.1.0",
  "description": "AKASHA specific top bar widget",
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "contributors": [
    "Sever Abibula <sever.abibula@akasha.world> (https://github.com/SeverS)",
    "Marius Darila <marius.darila@akasha.world> (https://github.com/kenshyx)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AkashaProject/akasha-world-framework.git"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "tsc --build",
    "tsc": "tsc --build",
    "prepare": "npm run tsc",
    "extract:translations": "i18next --config ./i18next-parser.config.js",
    "pack": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js",
    "pack:stats": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js --profile --json ../../stats/top-bar.json",
    "postpack": "copyfiles -f ./dist/* ../../build/widgets/topbar",
    "watch": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "lib/*",
      "dist/*",
      "build/*"
    ],
    "exec": "npm run pack || exit 1",
    "ext": "ts,tsx"
  },
  "dependencies": {
    "@akashaproject/design-system": "*",
    "@akashaproject/sdk-auth": "*",
    "@akashaproject/sdk-profiles": "*",
    "@akashaproject/sdk-common": "*",
    "@akashaproject/ui-awf-hooks": "*",
    "@types/i18next": "13.0.0",
    "@types/react-i18next": "8.1.0",
    "single-spa-react": "4.1.1",
    "react-i18next": "11.8.13",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@akashaproject/ui-awf-typings": "*",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/single-spa-react": "3.0.1",
    "@types/styled-components": "5.1.9",
    "@types/react-router-dom": "5.1.7"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rxjs": "6.6.7"
  },
  "files": [
    "lib"
  ]
}
