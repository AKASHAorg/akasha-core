  "description": "Integration Center widget",
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "contributors": [
    "Marius Darila <marius.darila@akasha.world> (https://github.com/kenshyx)",
    "Sever Abibula <sever.abibula@akasha.world> (https://github.com/SeverS)",
    "Valentin Cotea <valentin.cotea@akasha.world> (https://github.com/quininez)",
    "Josemaria Nriagu <josemaria.nriagu@akasha.world> (https://github.com/josenriagu)",
    "Damir Sabolic <damir.sabolic@akasha.world> (https://github.com/PrimarchAlpharius)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AkashaProject/akasha-world-framework.git"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "tsc --build",
    "tsc": "tsc --build",
    "prepare": "yarn run tsc",
    "extract:translations": "i18next --config ./i18next-parser.config.js",
    "pack": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js",
    "pack:stats": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js --profile --json ../../stats/trending-widget.json",
    "postpack": "copyfiles -f ./dist/* ../../build/widgets/trending",
    "pretest": "tsc -m commonjs",
    "test": "jest",
    "watch": "webpack --config webpack.config.js",
    "clean": "tsc --build --clean && rimraf lib dist node_modules tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@akashaproject/design-system": "*",
    "@akashaproject/ui-awf-hooks": "*",
    "single-spa-react": "4.6.0",
    "react-i18next": "11.12.0",
    "i18next": "20.6.1",
    "i18next-browser-languagedetector": "6.1.2",
    "i18next-fetch-backend": "3.0.0",
    "i18next-chained-backend": "3.0.2",
    "i18next-localstorage-backend": "3.1.3"
  },
  "devDependencies": {
    "@akashaproject/ui-awf-typings": "*",
    "@akashaproject/ui-awf-testing-utils": "*",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@types/styled-components": "5.1.14",
    "react-query": "3.34.7"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rxjs": "7.3.0"
  },
  "files": [
    "lib"
  ]
}
