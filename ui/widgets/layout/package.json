{
  "name": "@akashaproject/ui-widget-layout",
  "version": "0.1.0",
  "description": "AKASHA specific page-layout widget",
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "contributors": [
    "Sever Abibula <sever.abibula@akasha.world> (https://github.com/SeverS)",
    "Marius Darila <marius.darila@akasha.world> (https://github.com/kenshyx)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AkashaProject/akasha-world-framework.git"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "tsc --build",
    "tsc": "tsc --build",
    "prepare": "npm run tsc",
    "extract:translations": "i18next --config ./i18next-parser.config.js",
    "pack": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js",
    "pack:stats": "NODE_OPTIONS='--max-old-space-size=4096' webpack --config webpack.config.js --profile --json ../../stats/layout.json",
    "postpack": "copyfiles -f ./dist/* ../../build/widgets/layout",
    "watch": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "lib/*",
      "dist/*",
      "build/*"
    ],
    "exec": "npm run pack || exit 1",
    "ext": "ts,tsx"
  },
  "dependencies": {
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "@types/single-spa-react": "2.12.0",
    "@akashaproject/design-system": "*",
    "@types/i18next": "13.0.0",
    "@types/react-i18next": "8.1.0",
    "single-spa-react": "3.2.0",
    "react-i18next": "11.7.3"
  },
  "devDependencies": {
  },
  "peerDependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "files": [
    "lib"
  ]
}
