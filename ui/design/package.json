    "@types/slate-react": "0.22.8",
    "@types/styled-components": "^4.4.2",
    "dayjs": "^1.8.19",
    "react-test-renderer": "^16.12.0",
    "react-toastify": "^5.5.0",
    "slate": "0.53.0",
    "slate-history": "0.54.2",
    "slate-react": "0.53.0"
