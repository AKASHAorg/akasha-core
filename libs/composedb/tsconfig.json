{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": [
      "dom",
      "es2022"
    ],
    "module": "es2020",
    "target": "es2020",
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "./lib"
  ]
}
