{
  "name": "@akashaorg/awf-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/sdk/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "dependsOn": ["@akashaorg/typings:prepare", "@akashaorg/composedb-models:prepare"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/sdk",
        "command": "tsc --build"
      }
    },
    "build": {
      "dependsOn": ["prepare"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/sdk",
        "command": "webpack --config webpack.config.mjs"
      },
      "outputs": [
        "{workspaceRoot}/dist/sdk",
        "{workspaceRoot}/dist/worker.js"
      ]
    },
    "generate-gql": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/sdk",
        "command": "graphql-codegen-esm --config codegen.cjs --project default && graphql-codegen-esm --config codegen.cjs --project mutations_client_api && graphql-codegen-esm --config codegen.cjs --project client_composedb && graphql-codegen-esm --config codegen.cjs --project queries_client"
      }
    }
  },
  "tags": ["scope:sdk", "type:lib"]
}

