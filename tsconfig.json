{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "pretty": true,
    "lib": ["es2017"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
