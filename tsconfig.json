{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2022"],
    "module": "esnext",
    "target": "es2022"
  },
  "references": [
    {
      "path": "./libs/design-system-core"
    },
    {
      "path": "./libs/design-system-components"
    },
    {
      "path": "./libs/hooks"
    },
    {
      "path": "./libs/feed"
    },
    {
      "path": "./libs/extensions"
    },
    {
      "path": "./extensions/widgets/layout"
    },
    {
      "path": "./extensions/widgets/mini-profile"
    },
    {
      "path": "./extensions/widgets/my-apps"
    },
    {
      "path": "./extensions/widgets/sidebar"
    },
    {
      "path": "./extensions/widgets/top-bar"
    },
    {
      "path": "./extensions/widgets/trending"
    },
    {
      "path": "./extensions/widgets/analytics"
    },
    {
      "path": "./extensions/apps/extensions"
    },
    {
      "path": "./extensions/apps/legal"
    },
    {
      "path": "./extensions/apps/notifications"
    },
    {
      "path": "./extensions/apps/profile"
    },
    {
      "path": "./extensions/apps/search"
    },
    {
      "path": "./extensions/apps/antenna"
    },
    {
      "path": "./extensions/apps/auth-app"
    },
    {
      "path": "./extensions/apps/routing"
    },
    {
      "path": "./extensions/apps/settings"
    },
    {
      "path": "./extensions/apps/vibes"
    },
    {
      "path": "./extensions/apps/vibes-console"
    },
    {
      "path": "./libs/sdk"
    },
    {
      "path": "./libs/typings"
    },
    {
      "path": "./libs/composedb"
    },
    {
      "path": "./worlds/akasha.world"
    },
    {
      "path": "./tools/executors"
    },
    {
      "path": "./tests"
    }
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "tmp", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
