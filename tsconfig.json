{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2019", "dom"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
