{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2022"
    ],
    "module": "ES2020",
    "target": "es2022"
  },
  "references": [
    {
      "path": "./ui/design-system-core"
    },
    {
      "path": "./ui/design-system-components"
    },
    {
      "path": "./tests"
    },
    {
      "path": "./ui/hooks"
    },
    {
      "path": "./ui/lib/feed"
    },
    {
      "path": "./ui/lib/extensions"
    },
    {
      "path": "./ui/widgets/layout"
    },
    {
      "path": "./ui/widgets/mini-profile"
    },
    {
      "path": "./ui/widgets/my-apps"
    },
    {
      "path": "./ui/widgets/sidebar"
    },
    {
      "path": "./ui/widgets/top-bar"
    },
    {
      "path": "./ui/widgets/trending"
    },
    {
      "path": "./ui/widgets/analytics"
    },
    {
      "path": "./ui/widgets/example-widget"
    },
    {
      "path": "./ui/apps/extensions"
    },
    {
      "path": "./ui/apps/lists"
    },
    {
      "path": "./ui/apps/legal"
    },
    {
      "path": "./ui/apps/notifications"
    },
    {
      "path": "./ui/apps/profile"
    },
    {
      "path": "./ui/apps/search"
    },
    {
      "path": "./ui/apps/messaging"
    },
    {
      "path": "./ui/apps/articles"
    },
    {
      "path": "./ui/apps/example-app"
    },
    {
      "path": "./sdk"
    },
    {
      "path": "./typings"
    },
    {
      "path": "./tools/composedb"
    }
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tmp"
  ]
}
