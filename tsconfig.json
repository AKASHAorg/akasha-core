{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2019", "dom"]
  },
  "references": [
    { "path": "./ui/design" },
    { "path": "./ui/typings" },
    { "path": "./ui/testing-utils"},
    { "path": "./ui/hooks" },
    { "path": "./ui/widgets/feed" },
    { "path": "./ui/widgets/layout" },
    { "path": "./ui/widgets/sidebar" },
    { "path": "./ui/widgets/top-bar" },
    { "path": "./ui/widgets/trending" },
    { "path": "./ui/plugins/app-center" },
    { "path": "./ui/plugins/bookmarks" },
    { "path": "./ui/plugins/legal" },
    { "path": "./ui/plugins/notifications" },
    { "path": "./ui/plugins/profile" },
    { "path": "./ui/plugins/search" }
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
