{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es2020", "dom"]
  },
  "references": [
    { "path": "./ui/design" },
    { "path": "./ui/typings" },
    { "path": "./ui/testing-utils"},
    { "path": "./ui/hooks" },
    { "path": "./ui/lib/feed" },
    { "path": "./ui/widgets/layout" },
    { "path": "./ui/widgets/sidebar" },
    { "path": "./ui/widgets/top-bar" },
    { "path": "./ui/widgets/trending" },
    { "path": "./ui/widgets/analytics"},
    { "path": "./ui/apps/app-center" },
    { "path": "./ui/apps/bookmarks" },
    { "path": "./ui/apps/legal" },
    { "path": "./ui/apps/notifications" },
    { "path": "./ui/apps/profile" },
    { "path": "./ui/apps/search" },
    { "path": "./sdk"},
    { "path":  "./sdk/typings"}
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"],
  "files": ["./sdk/src/definitions/graphql.d.ts"]
}
