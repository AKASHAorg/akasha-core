{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "composite": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "module": "ES2020",
    "target": "es2020"
  },
  "references": [
    {
      "path": "./ui/design"
    },
    {
      "path": "./ui/design-system-core"
    },
    { "path": "./tests" },
    { "path": "./ui/hooks" },
    { "path": "./ui/lib/feed" },
    { "path": "./ui/widgets/layout" },
    {
      "path": "./ui/widgets/mini-profile"
    },
    {
      "path": "./ui/widgets/my-apps"
    },
    { "path": "./ui/widgets/sidebar" },
    { "path": "./ui/widgets/top-bar" },
    { "path": "./ui/widgets/trending" },
    { "path": "./ui/widgets/analytics" },
    { "path": "./ui/apps/app-center" },
    { "path": "./ui/apps/bookmarks" },
    { "path": "./ui/apps/legal" },
    { "path": "./ui/apps/notifications" },
    { "path": "./ui/apps/profile" },
    { "path": "./ui/apps/search" },
    { "path": "./ui/apps/messaging" },
    { "path": "./ui/apps/articles" },
    { "path": "./ui/apps/dev-dashboard" },
    { "path": "./sdk" },
    {
      "path": "./typings"
    }
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "tmp"]
}
