{
  "package": {
    "dependencies": {
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "single-spa-react": "4.6.0"
    },
    "devDependencies": {
      "@testing-library/jest-dom": "5.16.5",
      "@testing-library/react": "13.0.0",
      "@testing-library/user-event": "13.2.1",
      "@types/jest": "29.0.0",
      "@types/node": "18.7.15",
      "@types/react": "17.0.20",
      "@types/react-dom": "17.0.9",
      "@types/single-spa-react": "3.0.1",
      "typescript": "4.9.3",
      "jest": "29.0.3",
      "ts-loader": "9.4.1",
      "webpack": "5.74.0",
      "copyfiles": "2.4.1"
    },
    "scripts": {
      "start": "cd ./src/app-example && yarn start",
      "build": "cd ./src/app-example && yarn build",
      "postbuild": "yarn build:registry && cd ./src/widget-example && yarn build",
      "build:registry": "webpack --config ./registry/webpack.config.js",
      "postbuild:registry": "copyfiles -f ./registry/dist/* ./public"
    },
    "eslintConfig": {
      "extends": ["react-app", "plugin:jsx-a11y/recommended"],
      "plugins": ["jsx-a11y"]
    },
    "engines": {
      "node": ">=16.13.0",
      "npm": ">=8.1.0",
      "yarn": "^1.22.0"
    },
    "workspaces": ["app-example", "widget-example"]
  }
}
