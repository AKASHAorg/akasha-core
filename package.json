{
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && yarn build:executors",
    "build:staging": "yarn && yarn tsc:all && yarn build:sdk && yarn pack:ui && yarn pack:ui-libs && yarn build:feed-app && yarn extract:translations",
    "build:all": "yarn tsc:all && yarn build:sdk && yarn pack:ui && yarn pack:ui-libs && yarn build:feed-app && yarn extract:translations",
    "build:sdk": "yarn tsc:sdk && nx run @akashaorg/awf-sdk:build --skip-nx-cache",
    "build:example": "nx run-many --target=build:staging --projects=@akashaorg/akasha.world",
    "build:executors": "nx run @akashaorg/nx-executors:build",
    "clean": "nx reset && nx run-many --target=clean --all && tsc --build --clean",
    "install:clean": "yarn clean && yarn bootstrap && yarn build:all",
    "compile:sc": "nx run-many --target=sc:compile --projects=@akashaorg/awf-sdk --output-style=stream",
    "deploy:sc": "nx run-many --target=sc:deploy:goerli --projects=@akashaorg/awf-sdk --output-style=stream",
    "extract:translations": "nx run-many --target=extract:translations --all",
    "linter:check": "eslint . --ext .ts,.tsx --fix-dry-run",
    "linter:fix": "eslint . --ext .ts,.tsx --fix",
    "pack:design-system-core": "nx run @akashaorg/design-system-core:build",
    "pack:design-system-components": "nx run @akashaorg/design-system-components:build",
    "pack:ui-widgets": "nx run-many --target=build --projects=@akashaorg/ui-widget-analytics,@akashaorg/ui-widget-layout,@akashaorg/ui-widget-mini-profile,@akashaorg/ui-widget-my-apps,@akashaorg/ui-widget-sidebar,@akashaorg/ui-widget-topbar,@akashaorg/ui-widget-trending",
    "pack:ui-libs": "nx run-many --target=build --projects=@akashaorg/ui-lib-feed,@akashaorg/ui-lib-extensions",
    "pack:ui-apps": "nx run-many --target=build --projects=@akashaorg/app-akasha-integration,@akashaorg/app-translation,@akashaorg/app-routing,@akashaorg/app-extensions,@akashaorg/app-auth-ewa,@akashaorg/app-lists,@akashaorg/app-legal,@akashaorg/app-messaging,@akashaorg/app-moderation-ewa,@akashaorg/app-notifications,@akashaorg/app-profile,@akashaorg/app-search,@akashaorg/app-settings-ewa,@akashaorg/app-articles,@akashaorg/app-dev-dashboard",
    "pack:app-loader": "nx run @akashaorg/ui-app-loader:build",
    "pack:ui": "yarn tsc:ui && yarn pack:design-system-core && yarn pack:design-system-components && yarn pack:ui-widgets && yarn pack:ui-apps && yarn pack:app-loader",
    "pack:only": "nx run-many --target=build --projects=$AWF_PACKAGE",
    "pack:watch": "nx run-many --target=pack:watch --projects=$AWF_PACKAGE",
    "tsc:sdk": "nx run @akashaorg/awf-sdk:tsc",
    "tsc:ui": "nx run-many --target=tsc --projects=@akashaorg/ui-awf-hooks,@akashaorg/ui-lib-feed,@akashaorg/ui-lib-extensions",
    "tsc:all": "nx run-many --target=tsc --all --skip-nx-cache",
    "start:feed-app": "nx run @akashaorg/akasha.world:start",
    "build:feed-app": "nx run @akashaorg/akasha.world:build",
    "start:storybook": "nx run @akashaorg/design-system-components:storybook",
    "build:storybook": "nx run @akashaorg/design-system-components:build-storybook",
    "test:apps": "nx run-many --target=test --projects=@akashaorg/app-akasha-integration,@akashaorg/app-translation,@akashaorg/app-extensions,@akashaorg/app-auth-ewa,@akashaorg/app-lists,@akashaorg/app-legal,@akashaorg/app-moderation-ewa,@akashaorg/app-notifications,@akashaorg/app-profile,@akashaorg/app-search,@akashaorg/app-settings-ewa,@akashaorg/app-articles,@akashaorg/app-dev-dashboard",
    "test:design-system-core": "nx run @akashaorg/design-system-core:test",
    "test:design-system-components": "nx run @akashaorg/design-system-components:test",
    "test:hooks": "nx run @akashaorg/ui-awf-hooks:test",
    "test:widgets": "nx run-many --target=test --projects=@akashaorg/ui-widget-analytics,@akashaorg/ui-widget-layout,@akashaorg/ui-widget-mini-profile,@akashaorg/ui-widget-my-apps,@akashaorg/ui-widget-sidebar,@akashaorg/ui-widget-topbar,@akashaorg/ui-widget-trending",
    "test:app-loader": "nx run @akashaorg/ui-app-loader:test",
    "test:all": "yarn test:design-system-core && yarn test:design-system-components && yarn test:hooks",
    "push:integrations": "node build/integrations_bucket_store.js",
    "sdk:graphql:generate": "nx run-many --target=graphql:generate --projects=@akashaorg/awf-sdk --output-style=stream"
  },
