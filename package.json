{
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:hoist": "lerna bootstrap --hoist",
    "build:staging": "lerna bootstrap --no-ci && lerna run tsc && npm run build:sdk && npm run pack:ui && npm run extract:translations",
    "build:all": "lerna run tsc && npm run build:sdk && npm run pack:ui && npm run extract:translations",
    "build:sdk": "npm run tsc:sdk && lerna run build --scope @akashaproject/sdk --stream",
    "build:ewa": "lerna run build:staging --scope @akashaproject/ethereum.world --stream",
    "clean": "lerna clean",
    "docs": "lerna run docs --scope @akashaproject/sdk --scope @akashaproject/sdk-common",
    "install:clean": "npm run clean && npm run build:all",
    "compile:sc": "lerna run compile:sc",
    "deploy:sc": "lerna run deploy:sc",
    "extract:translations": "lerna run extract:translations --stream",
    "linter:check": "tslint --project tsconfig.json",
    "linter:fix": "tslint --project tsconfig.json --fix",
    "pack:ui-design": "lerna run pack --scope @akashaproject/design-* --stream",
    "pack:ui-plugins": "lerna run pack --scope @akashaproject/ui-* --stream",
    "pack:ui-apps": "lerna run pack --scope @akashaproject/app-* --stream",
    "pack:ui": "npm run tsc:ui && npm run pack:ui-design && npm run pack:ui-plugins && npm run pack:ui-apps",
    "pack:ui-apps:stats": "lerna run pack:stats --parallel --scope @akashaproject/* --stream",
    "pack:only": "lerna run pack --scope $AWF_PACKAGE --stream",
    "pack:watch": "lerna run pack:watch --scope $AWF_PACKAGE --stream",
    "tsc:sdk": "lerna run tsc --scope @akashaproject/sdk --scope @akashaproject/sdk-*",
    "tsc:ui": "lerna run tsc --scope @akashaproject/design-* --scope @akashaproject/ui-* --scope @akashaproject/app-*",
    "tsc:scripts": "lerna run tsc --scope @akashaproject/script-*",
    "script:dev-db": "lerna run start --scope @akashaproject/script-server-db --stream",
    "start:feed-app": "lerna run start --scope=@akashaproject/ethereum.world --stream",
    "start:expose-feed-app": "lerna run start:expose --scope=@akashaproject/ethereum.world --stream",
    "build:feed-app": "lerna run --scope=@akashaproject/ethereum.world build",
    "start:translations-server": "npm run start --prefix scripts/translations-server",
    "start:design-system:storybook": "lerna run storybook --scope @akashaproject/storybook --stream",
    "build:storybook": "lerna run build:storybook --scope @akashaproject/storybook --stream",
    "start:only": "lerna run start --scope $AWF_PACKAGE --stream",
    "start:api": "docker-compose up -d",
    "stop:api": "docker-compose stop awf-api couchbase",
    "watch:plugins": "lerna run --parallel --scope @akashaproject/ui-plugin-* watch",
    "watch:widgets": "lerna run --parallel --scope @akashaproject/ui-widget-* watch",
    "watch:apps": "lerna run --parallel --scope @akashaproject/app-* watch",
    "watch:all": "lerna run --scope='@akashaproject/*' --parallel watch",
    "watch:feed-app": "lerna run --scope=@akashaproject/ethereum.world --stream watch",
    "test:sdk": "lerna run test --scope @akashaproject/sdk-* --stream",
    "test:apps": "lerna run test --scope @akashaproject/app-akasha-integration --stream",
    "test:ui:watch": "lerna exec --parallel --scope @akashaproject/ui-* --scope @akashaproject/design-* --stream -- jest --watch",
    "test:design-system": "lerna run test --scope @akashaproject/design-system --stream",
    "test:hooks": "lerna run test --scope @akashaproject/ui-awf-hooks --stream",
    "test": "jest --config ./jest.config.base.js",
    "dev:server": "lerna run dev:server --stream"
  },
  "devDependencies": {
    "@babel/core": "7.13.15",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.13.15",
    "@babel/preset-env": "7.13.15",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.1",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.41",
    "babel-loader": "8.2.2",
    "babel-plugin-i18next-extract": "0.8.3",
    "clean-webpack-plugin": "4.0.0-alpha.0",
    "copy-webpack-plugin": "8.1.1",
    "copyfiles": "2.4.1",
    "core-js": "3.10.2",
    "html-webpack-plugin": "5.3.1",
    "husky": "6.0.0",
    "i18next-parser": "3.7.0",
    "jest": "^26.6.3",
    "lerna": "4.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "regenerator-runtime": "0.13.7",
    "rxjs": "6.6.7",
    "source-map-loader": "2.0.1",
    "styled-components": "5.2.3",
    "ts-jest": "^27.0.0-next.11",
    "ts-loader": "9.0.0",
    "tslint": "6.1.3",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "tslint-react": "5.0.0",
    "tslint-react-hooks": "2.2.2",
    "typedoc": "0.20.35",
    "typescript": "4.2.4",
    "webpack": "5.33.2",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "3.11.2"
  },
  "workspaces": [
    "sdk-packages/*",
    "ui/**",
    "scripts/*",
    "examples/**",
    "apps/*"
  ],
  "engines": {
    "node": ">=12.13.0",
    "npm": ">=6.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
