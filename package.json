{
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:hoist": "lerna bootstrap --hoist",
    "build:staging": "lerna bootstrap --no-ci && lerna run tsc && npm run build:sdk && npm run pack:ui && npm run extract:translations",
    "build:all": "lerna run tsc && npm run build:sdk && npm run pack:ui && npm run extract:translations",
    "build:sdk": "npm run tsc:sdk && lerna run build --scope @akashaproject/awf-sdk --stream",
    "build:ewa": "lerna run build:staging --scope @akashaproject/ethereum.world --stream",
    "clean": "lerna run clean && lerna clean",
    "docs": "lerna run docs --scope @akashaproject/sdk --scope @akashaproject/sdk-common",
    "install:clean": "npm run clean && npm run build:all",
    "compile:sc": "lerna run compile:sc",
    "deploy:sc": "lerna run deploy:sc",
    "extract:translations": "lerna run extract:translations --stream",
    "linter:check": "eslint . --ext .ts,.tsx --fix-dry-run",
    "linter:fix": "eslint . --ext .ts,.tsx --fix",
    "pack:ui-design": "lerna run pack --scope @akashaproject/design-* --stream",
    "pack:ui-plugins": "lerna run pack --scope @akashaproject/ui-* --stream",
    "pack:ui-apps": "lerna run pack --scope @akashaproject/app-* --stream",
    "pack:app-loader": "lerna run pack --scope @akashaproject/ui-app-loader --stream",
    "pack:ui": "npm run tsc:ui && npm run pack:ui-design && npm run pack:ui-plugins && npm run pack:ui-apps && npm run pack:app-loader",
    "pack:ui-apps:stats": "lerna run pack:stats --parallel --scope @akashaproject/* --stream",
    "pack:only": "lerna run pack --scope $AWF_PACKAGE --stream",
    "pack:watch": "lerna run pack:watch --scope $AWF_PACKAGE --stream",
    "tsc:sdk": "lerna run tsc --scope @akashaproject/awf-sdk",
    "tsc:ui": "lerna run tsc --scope @akashaproject/ui-awf-hooks --stream",
    "script:dev-db": "lerna run start --scope @akashaproject/script-server-db --stream",
    "start:feed-app": "lerna run start --scope=@akashaproject/ethereum.world --stream",
    "start:expose-feed-app": "lerna run start:expose --scope=@akashaproject/ethereum.world --stream",
    "build:feed-app": "lerna run --scope=@akashaproject/ethereum.world build",
    "start:design-system:storybook": "lerna run storybook --scope @akashaproject/design-system --stream",
    "build:storybook": "lerna run build-storybook --scope @akashaproject/design-system --stream",
    "start:only": "lerna run start --scope $AWF_PACKAGE --stream",
    "start:api": "docker-compose up -d",
    "stop:api": "docker-compose stop awf-api couchbase",
    "watch:plugins": "lerna run --parallel --scope @akashaproject/ui-plugin-* watch",
    "watch:widgets": "lerna run --parallel --scope @akashaproject/ui-widget-* watch",
    "watch:apps": "lerna run --parallel --scope @akashaproject/app-* watch",
    "watch:all": "lerna run --scope='@akashaproject/*' --parallel watch",
    "test:sdk": "lerna run test --scope @akashaproject/sdk-* --stream",
    "build:test": "lerna run pretest --scope @akashaproject/design-* --scope @akashaproject/ui-* --scope @akashaproject/app-* --stream",
    "test:ui:watch": "lerna exec --parallel --ignore @akashaproject/sdk-* --stream -- jest --watch",
    "test:apps": "lerna run test --scope @akashaproject/app-* --stream",
    "test:design-system": "lerna run test --scope @akashaproject/design-system --stream",
    "test:design-system:watch": "lerna run test:watch --scope @akashaproject/design-system --stream",
    "test:hooks": "lerna run test --scope @akashaproject/ui-awf-hooks --stream",
    "test:plugins": "lerna run test --scope @akashaproject/ui-plugin-* --stream",
    "test:widgets": "lerna run test --scope @akashaproject/ui-widget-* --stream",
    "test:ui": "lerna run test --scope @akashaproject/ui-* --scope @akashaproject/design-* --scope @akashaproject/app-* --stream",
    "test:app-loader": "lerna run test --scope @akashaproject/ui-app-loader --stream",
    "dev:server": "lerna run dev:server --stream",
    "update:deps": "lerna exec -- npx --package npm-check-updates ncu -u",
    "docs:build": "typedoc --tsconfig tsconfig.typedoc.json --packages ."
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-env": "7.15.6",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.1.0",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/node": "16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@welldone-software/why-did-you-render": "^6.2.1",
    "babel-loader": "8.2.2",
    "babel-plugin-i18next-extract": "0.8.3",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "9.0.1",
    "copyfiles": "2.4.1",
    "core-js": "3.17.3",
    "dotenv-webpack": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "html-webpack-plugin": "5.3.2",
    "husky": "7.0.2",
    "i18next-parser": "4.5.0",
    "jest": "27.2.0",
    "lerna": "4.0.0",
    "nodemon": "2.0.12",
    "prettier": "2.4.0",
    "pretty-quick": "3.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "regenerator-runtime": "0.13.9",
    "rxjs": "7.3.0",
    "source-map-loader": "3.0.0",
    "styled-components": "5.3.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "9.2.5",
    "typedoc": "0.21.9",
    "typedoc-plugin-markdown": "3.10.4",
    "typescript": "4.4.3",
    "webpack": "5.52.1",
    "webpack-cli": "4.9.0",
    "webpack-dev-server": "4.2.0"
  },
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {}
}
