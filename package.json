    "eslint-plugin-react": "7.31.7",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-tsdoc": "0.2.16",
    "ethers": "5.7.1",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
