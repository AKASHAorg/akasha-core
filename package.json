{
  "author": "AKASHA Foundation <hello@akasha.org> (https://akasha.org/)",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && yarn build:executors",
    "build:staging": "yarn && yarn tsc:all && yarn build:sdk && yarn pack:ui && yarn pack:ui-libs && yarn build:feed-app && yarn extract:translations",
    "build:all": "yarn tsc:all && yarn build:sdk && yarn pack:ui && yarn pack:ui-libs && yarn build:feed-app && yarn extract:translations",
    "build:sdk": "yarn tsc:sdk && nx run @akashaorg/awf-sdk:build",
    "build:ewa": "nx run-many --target=build:staging --projects=@akashaorg/ethereum.world",
    "build:executors": "nx run @akashaorg/nx-executors:build",
    "clean": "nx reset && nx run-many --target=clean --all && tsc --build --clean",
    "install:clean": "yarn clean && yarn bootstrap && yarn build:all",
    "compile:sc": "nx run-many --target=sc:compile --projects=@akashaorg/awf-sdk",
    "deploy:sc": "nx run-many --target=sc:deploy:rinkeby --projects=@akashaorg/awf-sdk",
    "extract:translations": "nx run-many --target=extract:translations --all",
    "linter:check": "eslint . --ext .ts,.tsx --fix-dry-run",
    "linter:fix": "eslint . --ext .ts,.tsx --fix",
    "pack:ui-design": "nx run @akashaorg/design-system:build",
    "pack:ui-widgets": "nx run-many --target=build --projects=@akashaorg/ui-widget-analytics,@akashaorg/ui-widget-layout,@akashaorg/ui-widget-mini-profile,@akashaorg/ui-widget-my-apps,@akashaorg/ui-widget-sidebar,@akashaorg/ui-widget-topbar,@akashaorg/ui-widget-trending",
    "pack:ui-libs": "nx run-many --target=build --projects=@akashaorg/ui-lib-feed",
    "pack:ui-apps": "nx run-many --target=build --projects=@akashaorg/app-akasha-integration,@akashaorg/app-translation,@akashaorg/app-routing,@akashaorg/app-integration-center,@akashaorg/app-auth-ewa,@akashaorg/app-bookmarks,@akashaorg/app-legal,@akashaorg/app-moderation-ewa,@akashaorg/app-notifications,@akashaorg/app-profile,@akashaorg/app-search,@akashaorg/app-settings-ewa",
    "pack:app-loader": "nx run @akashaorg/ui-app-loader:build",
    "pack:ui": "yarn tsc:ui && yarn pack:ui-design && yarn pack:ui-widgets && yarn pack:ui-apps && yarn pack:app-loader",
    "pack:ui-apps:stats": "lerna run pack:stats --parallel --scope @akashaorg/* --stream",
    "pack:only": "nx run-many --target=build --projects=$AWF_PACKAGE",
    "pack:watch": "nx run-many --target=pack:watch --projects=$AWF_PACKAGE",
    "tsc:sdk": "nx run @akashaorg/awf-sdk:tsc",
    "tsc:ui": "nx run @akashaorg/ui-awf-hooks:tsc",
    "tsc:all": "nx run-many --target=tsc --all --skip-nx-cache",
    "start:feed-app": "nx run @akashaorg/ethereum.world:start",
    "start:expose-feed-app": "lerna run start:expose --scope=@akashaorg/ethereum.world --stream",
    "build:feed-app": "nx run @akashaorg/ethereum.world:build",
    "start:design-system:storybook": "nx run @akashaorg/design-system:storybook",
    "build:storybook": "nx run @akashaorg/design-system:build-storybook",
    "start:only": "lerna run start --scope $AWF_PACKAGE --stream",
    "watch:widgets": "lerna run --parallel --scope @akashaorg/ui-widget-* watch",
    "watch:apps": "lerna run --parallel --scope @akashaorg/app-* watch",
    "watch:all": "lerna run --scope='@akashaorg/*' --parallel watch",
    "test:sdk": "lerna run test --scope @akashaorg/sdk-* --stream",
    "build:test": "lerna run pretest --scope @akashaorg/design-* --scope @akashaorg/ui-* --scope @akashaorg/app-* --stream",
    "test:ui:watch": "lerna exec --parallel --ignore @akashaorg/sdk-* --stream -- jest --watch",
    "test:apps": "nx run-many --target=test --projects=@akashaorg/app-akasha-integration,@akashaorg/app-translation,@akashaorg/app-integration-center,@akashaorg/app-auth-ewa,@akashaorg/app-bookmarks,@akashaorg/app-legal,@akashaorg/app-moderation-ewa,@akashaorg/app-notifications,@akashaorg/app-profile,@akashaorg/app-search,@akashaorg/app-settings-ewa",
    "test:design-system": "nx run @akashaorg/design-system:test",
    "test:design-system:watch": "lerna run test:watch --scope @akashaorg/design-system --stream",
    "test:hooks": "nx run @akashaorg/ui-awf-hooks:test",
    "test:widgets": "nx run-many --target=test --projects=@akashaorg/ui-widget-analytics,@akashaorg/ui-widget-layout,@akashaorg/ui-widget-mini-profile,@akashaorg/ui-widget-my-apps,@akashaorg/ui-widget-sidebar,@akashaorg/ui-widget-topbar,@akashaorg/ui-widget-trending",
    "test:ui": "lerna run test --scope @akashaorg/ui-* --scope @akashaorg/design-* --scope @akashaorg/app-* --stream",
    "test:app-loader": "nx run @akashaorg/ui-app-loader:test",
    "test:all": "yarn test:design-system && yarn test:app-loader && yarn test:hooks",
    "dev:server": "nx run-many --target=dev:server --projects=@akashaorg/hub-api",
    "update:deps": "lerna exec -- npx --package npm-check-updates ncu -u",
    "docs:build": "typedoc --tsconfig tsconfig.typedoc.json --hideInPageTOC true --entryPointStrategy packages 'sdk/typings' 'sdk' 'ui/*' 'ui/widgets/*'",
    "push:integations": "node build/integrations_bucket_store.js"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.15.0",
