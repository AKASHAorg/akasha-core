  ],
  "engines": {
    "node": ">=16.13.0",
    "npm": ">=8.1.0",
    "yarn": "<=1.22.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  }
}
