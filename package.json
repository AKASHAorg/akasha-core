    "react-dom": "18.1.0",
    "react-test-renderer": "18.1.0",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "source-map-loader": "3.0.0",
    "styled-components": "5.3.5",
    "systemjs-webpack-interop": "2.3.7",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "typescript": "4.9.3",
    "web3.storage": "4.4.0",
    "webpack": "5.74.0",
    "webpack-assets-manifest": "5.1.0",
    "webpack-bundle-analyzer": "4.6.1",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1",
    "webpack-manifest-plugin": "5.0.0",
    "webpack-subresource-integrity": "5.1.0"
  },
  "workspaces": {
    "packages": [
      "sdk/typings",
      "ui/typings",
      "typings",
      "api/hub",
      "sdk",
      "ui/hooks",
      "ui/design",
      "ui/design-system-core",
      "tests",
      "ui/hooks",
      "ui/lib/feed",
      "ui/widgets/analytics",
      "ui/widgets/layout",
      "ui/widgets/mini-profile",
      "ui/widgets/my-apps",
      "ui/widgets/sidebar",
      "ui/widgets/top-bar",
      "ui/widgets/trending",
      "ui/app-loader",
      "ui/apps/akasha",
      "ui/apps/moderation",
      "ui/apps/profile",
      "ui/apps/auth-app",
      "ui/apps/settings-app",
      "ui/apps/messaging",
      "ui/apps/articles",
      "ui/apps/dev-dashboard",
      "ui/apps/app-center",
