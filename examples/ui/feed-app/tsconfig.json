{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": ["es6", "dom", "es2017"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../../../ui/plugins/events"
    },
    {
      "path": "../../../ui/widgets/layout"
    },
    {
      "path": "../../../ui/widgets/sidebar"
    },
    {
      "path": "../../../ui/widgets/top-bar"
    }
  ],
  "include": ["./src"]
}
