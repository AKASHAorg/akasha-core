{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": ["es6", "dom", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "declaration": false,
    "composite": false,
    "target": "es5"
  },
  "references": [
    {
      "path": "../../../ui/plugins/events"
    },
    {
      "path": "../../../ui/widgets/layout"
    },
    {
      "path": "../../../ui/widgets/sidebar"
    },
    {
      "path": "../../../ui/widgets/top-bar"
    }
  ],
  "include": ["./src"]
}
